<html>

<head>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  
  <!-- jQuery library -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
  
  <!-- Popper JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    table,
    th,
    td {
      border: 1px solid black;
    }
  </style>
</head>

<body>
  <table style="width:100%" class="w-75 mx-auto">
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>FullName</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
    <% for(var i=0; i < users.length; i++) { %>
      <tr>
        <td>
          <%= users[i].id %>
        </td>
        <td>
          <%= users[i].email %>
        </td>
        <td>
          <%= users[i].fullName %>
        </td>
        <td>
          <%= users[i].phone %>
        </td>
        <td>
          <%= users[i].address %>
        </td>
        <td class="text-center">
          <a href="/show-edit-user-form?id=<%= users[i].id %>" class="text-white bg-primary"  type="button">Edit</a>
          <a href="/delete-user?id=<%= users[i].id %>" class="text-white bg-danger" type="button">Delete</a>
        </td>
      </tr>
      <% } %>
  </table>

</body>

</html>